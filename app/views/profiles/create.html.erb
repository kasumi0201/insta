<%= form_with(model: @profile, local: true) do |form| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form.hidden_field :user_id, id: :profile_user_id%>
  <div class="field">
    <%= form.label :image %>
    <%= form.hidden_field :image, value: @profile.cached_image_data if defined?(@profile.cached_image_data) %>
    <!-- ＃ここが重要！！！ -->
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :profile_username %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
