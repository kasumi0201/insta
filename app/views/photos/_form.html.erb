<%= form_for @photo do |f| %>
  <%= render "shared/errors", object: @photo %>

  <%= f.label :user_id %>
  <%= f.text_field :user_id %>

  <%= f.hidden_field :image, value: @photo.image_data %>
  <%= f.label :image %>
  <%= f.file_field :image, id: :photo_image_data %>

  <%= f.submit %>
<% end %>



<% if @photo.image_data? %>
 <%= image_tag @photo.image_url %>
    Remove attachment: <%= f.check_box :remove_image %>
<% end %>
